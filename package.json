{
  "name": "racetagger-desktop",
  "version": "1.0.9-internal.5",
  "description": "Professional race photography analysis tool with AI-powered race number recognition",
  "author": {
    "name": "RaceTagger Team",
    "email": "info@racetagger.cloud"
  },
  "homepage": "https://www.racetagger.cloud",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && electron-builder",
    "dev": "concurrently \"tsc --watch\" \"electron .\"",
    "compile": "tsc",
    "rebuild": "electron-rebuild",
    "rebuild:sharp": "npx @electron/rebuild -f -w sharp",
    "rebuild:debug": "cross-env DEBUG=electron-rebuild npm run rebuild:sharp",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "tsc && node dist/tests/performance/test-runner.js",
    "test:performance:quick": "tsc && node dist/tests/performance/test-runner.js --quick",
    "test:performance:full": "tsc && node dist/tests/performance/test-runner.js --full",
    "test:performance:verbose": "tsc && node dist/tests/performance/test-runner.js --full --verbose",
    "benchmark": "npm run test:performance:full",
    "regression-test": "npm run test:performance:quick",
    "build:win:x64": "tsc && electron-builder --win --x64",
    "build:win:arm64": "tsc && electron-builder --win --arm64",
    "build:win:all": "npm run build:win:x64 && npm run build:win:arm64",
    "rebuild:win": "scripts/rebuild-native-windows.ps1",
    "setup:win": "scripts/setup-windows-dev.ps1",
    "setup:imagemagick": "scripts/setup-imagemagick-windows.ps1",
    "generate:icons": "node scripts/generate-icons.js"
  },
  "build": {
    "appId": "com.racetagger.desktop",
    "productName": "RaceTagger",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "vendor/**/*",
      "renderer/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "asarUnpack": [
      "vendor/**/*",
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*",
      "node_modules/detect-libc/**/*",
      "node_modules/color/**/*",
      "node_modules/color-string/**/*",
      "node_modules/color-name/**/*",
      "node_modules/color-convert/**/*",
      "node_modules/simple-swizzle/**/*",
      "node_modules/is-arrayish/**/*",
      "node_modules/semver/**/*",
      "node_modules/simple-get/**/*",
      "node_modules/tar-fs/**/*",
      "node_modules/tunnel-agent/**/*",
      "node_modules/jimp/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/raw-preview-extractor/**/*"
    ],
    "icon": "racetagger-logo.icns",
    "mac": {
      "category": "public.app-category.photography",
      "icon": "racetagger-logo.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "signIgnore": [
        "vendor/darwin/lib/Image/ExifTool/Geolocation.dat",
        "vendor/darwin/lib/Image/ExifTool/*.dat",
        "vendor/win32"
      ],
      "files": [
        "!vendor/win32/**/*"
      ]
    },
    "afterPack": "scripts/post-pack-fixes.js",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "publisherName": "RaceTagger",
      "artifactName": "${productName}-${version}-${arch}-${os}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RaceTagger",
      "displayLanguageSelector": true,
      "installerLanguages": [
        "en",
        "it"
      ],
      "warningsAsErrors": false,
      "differentialPackage": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics",
      "icon": "racetagger-logo.icns",
      "maintainer": "RaceTagger Team <info@racetagger.cloud>"
    },
    "npmRebuild": true,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@supabase/supabase-js": "^2.30.0",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^11.10.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^2.0.0",
    "exifreader": "^4.29.0",
    "jimp": "^1.6.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^3.1.0",
    "piexifjs": "^1.0.6",
    "raw-preview-extractor": "file:./vendor/raw-preview-extractor",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.2",
    "@electron/rebuild": "^3.6.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.9.3",
    "electron-builder": "^24.13.0",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "spectron": "^19.0.0",
    "to-ico": "^1.1.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@img/sharp-win32-arm64": "^0.34.3",
    "@img/sharp-win32-x64": "^0.34.3"
  },
  "cpu": [
    "x64",
    "arm64"
  ],
  "os": [
    "win32",
    "darwin",
    "linux"
  ]
}
